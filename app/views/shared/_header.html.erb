<header>
  <div>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% elsif flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>
  </div>

  <div>
    <p><%= link_to "Rainforest", root_path, style: "font-size: 16pt; font-weight: bold; text-decoration: none; color: black" %>
    <% if current_user %>
      | Signed in as <%= current_user.first_name %> | <%= link_to "Profile", users_path %> | <%= link_to "Log Out", session_path("current"), :method => :delete %></p>
    <% else %>
      <% if request.fullpath !~ /\/(sessions|users)(\/new)?/ %>
        <%= link_to "Log In", new_session_path %> or <%= link_to "Sign Up", new_user_path %></p>
      <% end %>
    <% end %>
  </div>

  <nav>
    <h3>Menu</h3>
    <ul>
      <li><%= link_to "Products", products_path %></li>
      <li><%= link_to "My Cart", cart_index_path %></li>
    </ul>
  </nav>
</header>
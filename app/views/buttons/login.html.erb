<h1>My Rainforest Dash Buttons</h1>

<%= form_tag authenticate_user_buttons_path do %>

  <%= hidden_field_tag :client_id, 'spark' %>
  <%= hidden_field_tag :client_secret, 'spark' %>
  <%= hidden_field_tag :grant_type, 'password' %>

  <div>
    <%= label_tag :username %> <br>
    <%= text_field_tag :username %>
  </div>

  <div>
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag %>
  </div>

<% end %>
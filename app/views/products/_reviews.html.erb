<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %> <br>
    <% if review.user != nil %>
      <em> by <%= review.user.username %></em> <br>
      Added on: <%= review.created_at %> <br>
    <% end %>
    <% if review.user == current_user %>
      <%= link_to "Delete", product_review_path(@product, review), method: :delete %>
    <% end %>
  </p>
<% end %>
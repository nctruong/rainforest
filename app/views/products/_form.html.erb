<%= form_for @product do |f| %>

  <div>
    <%= f.label :name, 'Product' %> <br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :price_in_cents %> <br>
    <%= f.text_field :price_in_cents %>
  </div>

  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>

  <%= f.submit %>

<% end %>
